            // 다음 페이지 버튼
            document.getElementById('nextPageBtn').addEventListener('click', function() {
                const totalPages = Math.ceil(filteredData.length / pageSize);
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePagination();
