            });
            
            // 페이지 사이즈 변경
            document.getElementById('pageSize').addEventListener('change', function() {
                pageSize = parseInt(this.value);
                currentPage = 1; // 페이지 리셋
                applyFilters();
                renderServerTable();
            });
            
            // 이전 페이지 버튼
            document.getElementById('prevPageBtn').addEventListener('click', function() {
                if (currentPage > 1) {
                    currentPage--;
